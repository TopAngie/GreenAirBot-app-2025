<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Login"
    >
    
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="150dp"
        android:transitionName="logo_image"
        android:layout_height="150dp"
        android:src="@drawable/ecocity"/>

    <TextView
        android:id="@+id/logo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="GreenAirBot"
        android:transitionName="logo_text"
        android:textAlignment="center"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
       >
        <TextView
            android:id="@+id/slogan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In to continue"
            android:textColor="#4d504a"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <!-- Username Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="#b5bbb0"
            android:hint="Username"
            app:hintTextColor="#b5bbb0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>


        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#b5bbb0"
            app:endIconMode="password_toggle"
            app:hintTextColor="#b5bbb0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <TextView
            android:id="@+id/slogan_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4d504a"
            android:text="Forgot Password?"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/callSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textSize="18sp"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/slogan_nam4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account Here"
            android:textColor="#4d504a"
            android:textSize="18sp"/>
    </LinearLayout>


</LinearLayout>

